<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hzyc.yy.demo_02.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的爱好"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="篮球"
        android:onClick="check"
        android:id="@+id/lq"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/yy"
        android:layout_toStartOf="@+id/yy"
        android:layout_marginRight="93dp"
        android:layout_marginEnd="93dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="check"
        android:text="游泳"
        android:id="@+id/yy"
        android:layout_alignTop="@+id/lq"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="check"
        android:text="健身"
        android:id="@+id/js"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lq"
        android:layout_toEndOf="@+id/lq" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="check"
        android:text="旅行"
        android:id="@+id/lx"
        android:layout_alignTop="@+id/js"
        android:layout_alignLeft="@+id/lq"
        android:layout_alignStart="@+id/lq" />

</RelativeLayout>
